@model ChangePasswordModel

@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
    //page class
    Html.AppendPageCssClassParts("html-account-page");
    Html.AppendPageCssClassParts("html-change-password-page");
}
@section left {
    @await Component.InvokeAsync("CustomerNavigation", new { selectedTabId = CustomerNavigationEnum.ChangePassword })
}
<div class="page account-page change-password-page">
    <div class="page-title panel-heading">
        <h1>@T("Account.MyAccount") - @T("Account.ChangePassword")</h1>
    </div>
    <div class="page-body">
        @if (!string.IsNullOrEmpty(Model.Result))
            {
            <div class="alert alert-success">
                @Model.Result
            </div>
        }
        <form asp-route="CustomerChangePassword" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="message-error"></div>
            <div class="fieldset form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-3 col-md-2" asp-for="OldPassword"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-4">
                        <input class="form-control" asp-for="OldPassword" />
                    </div>
                    <div class="col-sm-3 col-md-4">
                        <span asp-validation-for="OldPassword"></span>
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3 col-md-2" asp-for="NewPassword"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-4">
                        <input class="form-control" asp-for="NewPassword" />
                    </div>
                    <div class="col-sm-3 col-md-4">
                        <span asp-validation-for="NewPassword"></span>
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3 col-md-2" asp-for="ConfirmNewPassword" asp-postfix=":"></label>
                    <div class="visible-xs form-title-rquired"><nop-required /></div>
                    <div class="col-sm-6 col-md-4">
                        <input class="form-control" asp-for="ConfirmNewPassword" />
                    </div>
                    <div class="col-sm-3 col-md-4">
                        <span asp-validation-for="ConfirmNewPassword"></span>
                        <div class="visible-lg visible-md visible-sm form-title-rquired"><nop-required /></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-md-offset-2 col-md-3">
                        <input type="submit" class="btn btn-primary change-password-button" value="@T("Account.ChangePassword.Button")" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>