@model IList<ProductOverviewModel>

@if (Model.Count > 0)
{
    <div class="product-grid cross-sells">
        <div class="title sub-title">
            <strong>@T("ShoppingCart.CrossSells")</strong>
        </div>
        <div class="row">
            @if (Model.Count <= 4)
            {
                foreach (var product in Model)
                {
                    <div class="item-box product-grid col-xs-12 col-sm-4 col-md-3 product-align clearfix">
                        <div class="thumbnail">
                            @await Html.PartialAsync("_ProductBox", product)
                        </div>
                    </div>
                }
            }
            else
            {
                <div id="crosssell-products-slider" class="crosssell-products-slider owl-carousel owl-theme">
                    @foreach (var product in Model)
                    {
                        <div class="item-box product-grid col-xs-12 col-sm-12 col-md-12 product-align clearfix">
                            <div class="thumbnail">@await Html.PartialAsync("_ProductBox", product)</div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}