@model IList<PollModel>

@if (Model.Count > 0)
{
    <div class="home-page-polls todays-poll-box">
        <div class="title sub-title">
            <strong>@T("Polls.Title")</strong>
        </div>
        <div class="row">
            <div class="col-md-12">
                @foreach (var poll in Model)
                {
                    @await Html.PartialAsync("_Poll", poll)
                }
            </div>
        </div>
</div>
}
